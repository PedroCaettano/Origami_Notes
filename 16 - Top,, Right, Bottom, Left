//Propriedades como margin, padding e border permitem definirmos valores diferentes para cada um dos lados da caixa(box model)

//exemplos de código em css:
div {
padding: 20px 40px;
margin: 30px 100px 60x 200px;

}

div{
padding: top/bottom right/left
margin: top right bottom left;

}

// Exemplo de um código mais elaborado: 
span{
display: inline-block;
background: #ddd;
}

.padding{
padding-top: 20px;
padding-right: 60px;
padding-bottom: 40px;
padding-left: 10px;
padding: 20px 60px 40px 10px;

}

.margin{
margin-top: 20px;
margin-bottom:20px;
margin-right: 40px;
margin-left: 40px;
margin: 20px 40px;
}

.border{
border: solid black;
border-width: 5px 20px
}

// Inline e block
// O que é? Os valores de top, bottom, right e left são relativos ao documento. Para valores relativos a caixa(box) que pode ser influenciada pelo modo de escrita,
use inline-start, inline-end, block-start, block-end 

// exemplo de código em css:
body {
writing-mode: vertical-rl;
}

h1{
    margin: 0px;
}

.top h1{
    margin-top: 30px;
}

.block-star h1 {
margin-block-start: 300x;
}
